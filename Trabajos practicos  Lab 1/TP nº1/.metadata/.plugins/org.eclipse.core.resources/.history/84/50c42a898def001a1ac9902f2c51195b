#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int A;
	int B;
	int suma;
	int resta;
	float division;
	int producto;
	//int factorial = 1;

	printf("Ingrese un numero A= ");
	scanf("%d", &A);
	printf("\n Ingrese un numero B= ");
	scanf("%d", &B);

	suma = A+B;
	printf("\n La suma da %d", suma);
	resta= A-B;
	printf("\n La resta da %d", resta);
	if(B == 0)
	{
		printf("\n No puede realizarse la division.");
	}
	else
	{
		division = (float) A/B;
		printf("\n La division es %.2f ", division);
	}
	producto = A*B;
	printf("\n El producto da %d", producto);
	return EXIT_SUCCESS;
}
