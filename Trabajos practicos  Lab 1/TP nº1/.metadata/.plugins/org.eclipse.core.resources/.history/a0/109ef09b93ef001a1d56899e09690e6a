#include <stdio.h>
#include <stdlib.h>

int sumar (int A, int b);
int restar (int A, int B);
float dividir (int A, int B);

int main(void) {
	int A;
	int B;
	int suma;
	int resta;
	float division;
	int producto;
	int factorial = 1;
	int i;

	printf("Ingrese un numero A= ");
	scanf("%d", &A);
	printf("\n Ingrese un numero B= ");
	scanf("%d", &B);

	suma = sumar(A,B);
	printf("\n La suma da %d", suma);
	resta= restar (A,B);
	printf("\n La resta da %d", resta);
	division = dividir(A,B);
	if(B!=0)
	{
		printf("\n La division es %.2f ", division);
	}
	producto = A*B;
	printf("\n El producto da %d", producto);

	for(i =1;A>=i;i++)
	{
		factorial = factorial *i;
	}
	printf("\n El factorial da %d \n", factorial);

	system("pause");
	return EXIT_SUCCESS;
}

int sumar (int A, int B)
{
	int suma;
	suma = A + B;
	return suma;
}

int restar (int A, int B)
{
	int resta;
	resta = A- B;
	return resta;
}

float dividir (int A, int B)
{
	float division;
	if(B == 0)
		{
			printf("\n No puede realizarse la division.");
		}
		else
		{
			division = (float) A/B;
			return division;
		}
}
