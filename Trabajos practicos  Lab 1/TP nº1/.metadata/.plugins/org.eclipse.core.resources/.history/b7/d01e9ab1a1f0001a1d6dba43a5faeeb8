#include <stdio.h>
#include <stdlib.h>

float sumar (float A, float b);
float restar (float A, float B);
float dividir (float A, float B);

int main(void) {
	float A;
	float B;
	float suma;
	float resta;
	float division;
	float producto;
	int factorial = 1;
	int i;

	printf("Ingrese un numero A= ");
	scanf("%f", &A);
	printf("\n Ingrese un numero B= ");
	scanf("%f", &B);

	suma = sumar(A,B);
	printf("\n La suma da %.2f", suma);
	resta= restar (A,B);
	printf("\n La resta da %.2f", resta);
	division = dividir(A,B);
	if(B!=0)
	{
		printf("\n La division es %.2f ", division);
	}
	producto = A*B;
	printf("\n El producto da %.2f", producto);

	for(i =1;A>=i;i++)
	{
		factorial = factorial *i;
	}
	printf("\n El factorial da %d \n", factorial);

	system("pause");
	return EXIT_SUCCESS;
}

float sumar (float A, float B)
{
	float suma;
	suma = A + B;
	return suma;
}

float restar (float A, float B)
{
	float resta;
	resta = A- B;
	return resta;
}

float dividir (float A, float B)
{
	float division;
	if(B == 0)
		{
			printf("\n No puede realizarse la division.");
			return 0;
		}
		else
		{
			division = A/B;
			return division;
		}
}
