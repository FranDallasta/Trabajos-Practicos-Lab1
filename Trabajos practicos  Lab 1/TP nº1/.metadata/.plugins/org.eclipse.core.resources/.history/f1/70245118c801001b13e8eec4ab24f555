#include <stdlib.h>
#include "TP1,Calculadora.h"


int main(void) {
	//Declaracion de variables
	float A;
	float B;
	float suma;
	float resta;
	float division;
	float producto;
	int factorA;
	int factorB;
	int opcion;

	printf("\n Ingrese una opcion: \n");
	printf("\n 1) Ingreso de operandos");
	printf("\n 2) Suma");
	printf("\n 3) Resta");
	printf("\n 4) Division");
	printf("\n 5) Producto");
	printf("\n 6) Factorial");

	do{
	switch(opcion){
		case 1:
		{
			printf("Ingrese un numero A= "); //Ingreso de numeros
			scanf("%f", &A);
			printf("\n Ingrese un numero B= ");
			scanf("%f", &B);
			break;
		}
		case 2:		//Funciones
		{
			suma = sumar(A,B);
			printf("\n La suma da %.2f", suma);
			break;
		}
		case 3:
		{
			resta= restar (A,B);
			printf("\n La resta da %.2f", resta);
			break;
		}
		case 4:
		{
			division = dividir(A,B);
			if(B!=0)
			{
				printf("\n La division es %.2f ", division);
			}
			break;
		}
		case 5:
		{
			producto = multilicar(A,B);
			printf("\n El producto da %.2f", producto);
			break;
		}
		case 6:
		{
			factorA = factorial(A);
			printf("\n El factorial da %d ", factorA);
			factorB = factorial(B);
			printf("\n El factorial da %d \n", factorB);
			break;
		}
	}
	}while(opcion != 7);
	system("pause");
	return EXIT_SUCCESS;
}


